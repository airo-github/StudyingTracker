<% content_for(:title, t('.title')) %>
<div class="container px-5 py-20 mx-auto">
  <div class="col-md-10 offset-md-1">
    <div class="flex flex-col text-center w-full mb-5">
      <div class="text-3xl mb-4"><%= t('.title') %></div>
    </div>
    <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-success float-right text-headfoot' %>
    <table class="table">
      <tr>
        <th scope="row"><%= t(User.human_attribute_name(:email)) %></th>
        <td><%= current_user.email %></td>
      </tr>
      <tr>
        <th scope="row"><%= t(User.human_attribute_name(:name)) %></th>
        <td><%= current_user.name %></td>
      </tr>
      <tr>
        <th scope="row"><%= t(User.human_attribute_name(:avatar)) %></th>
        <td>
          <div class="avatar">
            <div class="w-16 rounded-full">
              <%= image_tag current_user.avatar.url %>
            </div>
          </div>
        </td>
      </tr>
      <tr>
        <th class= "text-xl",scope="row"><%= t('.total_time') %>  <%="#{@total_time / 60}"%><%=t('.hour')%><%="#{@total_time % 60}"%><%=t('.minute') %></th>
      </tr>
    </table>
    <br>
    <br>
    <div class="flex flex-col text-center w-full mb-20">
      <% if @study_time.present? %>
        <div class="text-3xl mb-4"><%= t('.study_times') %></div>
          <div class="flex flex-wrap -m-2">
            <%= render @study_time %>
          </div>
        </div>
      <% else %>
        <div class="flex flex-col text-center w-full mb-20">
          <div class="text-3xl mb-4"><%= t('.no_result') %></div>
        </div>
      <% end %>
    </div>
    <div class="flex justify-center text-center text-2xl">
      <%= paginate @study_time %>
    </div>
    <%= button_to t('users.destroy'), user_path(current_user.id), class: 'btn btn-secondary float-right text-headfoot', method: :delete, "data-confirm" => t('defaults.message.destroy_confirm') %>
    <br>
    <br>
  </div>
</div>
