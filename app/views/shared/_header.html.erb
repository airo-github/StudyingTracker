<header data-theme="retro", class= "py-12">
  <div class="container mx-auto flex flex-wrap flex-col md:flex-row items-center">
    <div class="font-title">
      <%= link_to "Studying Tracker", root_path, class: "text-5xl text-headfoot" %>
    </div>
    <div class="md:ml-auto flex flex-wrap items-center text-base md:text-xl justify-center">
      <% unless current_user.study_times.exists?(status: 0) %>
        <%= link_to (t 'study_times.new.title'), new_study_time_path, class: "btn mr-5 text-headfoot"%>
      <% end %>
      <%= link_to (t 'study_times.index.title'), study_times_path, class: "btn mr-5 text-headfoot"%>
      <%= link_to (t "profiles.show.title"), profile_path, class: "btn mr-5 text-headfoot" %>
      <%= button_to (t 'defaults.logout'), logout_path, method: :delete, class: "btn mr-5 text-headfoot" %>
      <div class="avatar">
        <div class="w-16 rounded-full">
          <%= image_tag current_user.avatar.url %>
        </div>
      </div>
    </div>
  </div>
</header>
