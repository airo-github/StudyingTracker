<div class="container px-5 py-20 mx-auto">
  <div class="flex flex-col text-center w-full mb-20">
    <% if @study_time.present? %>
      <div class="text-3xl font-top mb-4"><%= t('.title') %></div>
      <%= link_to '勉強開始ツイート', "https://twitter.com/share?url=https://studying-tracker.fly.dev/&text=#{CGI.escape("#{current_user.name}さんが勉強を開始しました！")}", class: 'btn btn-info fa-brands fa-twitter fa-2xl text-twitter w-48', target: '_blank' %>
      <br>
        <div class="flex flex-wrap -m-2">
          <%= render @study_time %>
        </div>
      </div>
    <% else %>
      <div class="flex flex-col text-center w-full mb-20">
        <div class="text-3xl font-top mb-4"><%= t('.no_result') %></div>
      </div>
    <% end %>
  </div>
</div>
